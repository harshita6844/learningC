#include <stdio.h>

int main()
{
    int num;
    printf("Enter the number to be checked");
    scanf("%d",&num);
    if(num%2==0)                                /* a number is even if it is divisible by 2*/
    {
        printf("The number %d is even", num);

    }
    else
    {
    printf("The number %d is odd", num);
    }
}

